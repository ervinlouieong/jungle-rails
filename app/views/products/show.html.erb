<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>

</section>

<section class="products-review">
  <h2>Reviews:</h2>
  <table class="table table-bordered">
      <thead>
        <tr>
          <th>Ratings</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @review.each do |review| %>
          <tr>
            <td><%= review.rating %></td>
            <td>
            <%= review.description %> -<%= review.user.first_name %> <%= review.user.last_name %>
            <% if current_user && current_user.id == review.user_id %>
              <%= link_to fa_icon('trash'), [review.product, review], class: 'btn btn-sm btn-danger pull-right', method: :delete, data: { confirm: "Are you sure?" } %>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>

  <% if current_user %>
  <h2>Post Review:</h2>
    <%= form_for([@product, @new_review]) do |form| %>
      <div class="field">
        <%= form.label :rating %>
        <%= form.select :rating, [[1], [2], [3], [4], [5]] %>
      </div>
      <div class="field">
        <%= form.label :description %>
        <%= form.text_field :description, id: :review_description %>
      </div>
      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  <% end %>

</section>
