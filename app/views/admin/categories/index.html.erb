<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
        </tr>
      </thead>
      <tbody>
        <% Category.all.each do |category| %>
        <table>
         <h4 class="cateories-list"><li><%=link_to category.name, category %></li></h4>
        </table>
        <% end %> 
      </tbody>
    </table>

  </div>

</section>
