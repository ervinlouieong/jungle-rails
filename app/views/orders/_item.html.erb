<% item_total = order.product.price * order.quantity %>
<% @order_total += item_total %>  

<tr>
  <td>
    <%= image_tag order.product.image.tiny %>
  </td>
  <td>
    <h4><%= order.product.name %></h4>
    <br>
    <p><%= order.product.description %></p>
  </td>
  <td>
    <%= order.product.price %>
  </td>
  <td>
    <%= order.quantity %>
  </td>
  <td>
    <%= item_total %>
  </td>
</tr>